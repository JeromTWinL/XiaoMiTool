 #!/bin/bash

DIRECTORY="$(dirname "$(dirname "$( cd "$(dirname "$0")" >/dev/null 2>&1 ; pwd -P )")")"

function error {
  echo -e "\\e[91m$1\\e[39m"
  exit 1
}

echo "Uninstalling Mi Tool..."
rm -rf ~/.local/share/applications/MiUnlocktool.desktop ~/MiUnlockTool
echo "Do you wanna uninstall dependencies installed in install script?"
echo -ne "Type in your answer [y/N]: "
read ans
if [ "$ans" == N ] || [ "$ans" == n ] || [ -z "$ans" ]; then
exit 0
fi
"${DIRECTORY}/purge-installed" $(dirname "$0") || exit 1
echo " "
echo "Successfully uninstalled Mi Unlock Tool!"
exit 0